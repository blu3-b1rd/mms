package com.myband.sample;

import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentActivity;
import android.support.v4.app.FragmentTransaction;

import com.myband.sample.util.HomeSection;

public class SectionActivity extends FragmentActivity {

	public static final String SECTION_INDEX = "sectionIndex";
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		this.setContentView(R.layout.activity_section);
		this.init(this.getIntent().getIntExtra(SECTION_INDEX, 0));
	}
	
	private void init(int sectionIndex){
		HomeSection section = HomeSection.values()[sectionIndex];
		try {
			FragmentTransaction transaction = this.getSupportFragmentManager().beginTransaction();
			transaction.replace(R.id.section_container, 
					(Fragment) section.getFragmentClass().newInstance(),
					section.getFragmentTag())
					.commit();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
