<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="Hi there, Grzegorz Feathers!"
            android:textSize="22sp"
            android:textStyle="bold" />
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="(jmendez.garmendia@gmail.com)"
            android:textSize="15sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:alpha="0.3"
            android:contentDescription="@null"
            android:src="@drawable/guy" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingLeft="15dp" >

            <ListView
                android:id="@+id/rating_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rating_label"
                android:layout_centerHorizontal="true"
                android:divider="@android:color/transparent"
                android:layoutAnimation="@anim/reverse_pop_up"
                android:stackFromBottom="true" />

            <TextView
                android:id="@+id/rating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="My Rating" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>