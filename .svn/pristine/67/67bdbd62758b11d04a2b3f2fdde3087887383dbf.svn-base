package com.myband.sample;

import android.content.Intent;
import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentActivity;
import android.support.v4.app.FragmentManager;
import android.support.v4.app.FragmentTransaction;
import android.view.MenuItem;

import com.myband.sample.fragment.NewsSectionFragment;
import com.myband.sample.util.HomeSection;
import com.myband.sample.util.OnHomeSectionSelectedListener;
import com.slidinglayer.SlidingLayer;

public class HomeActivity extends FragmentActivity implements
		OnHomeSectionSelectedListener {

	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		overridePendingTransition(R.anim.fade_in, 0);
		this.setContentView(R.layout.activity_home);
		this.configure();
	};

	private void configure() {
		this.getActionBar().setDisplayHomeAsUpEnabled(true);
		this.changeHomeContent(new NewsSectionFragment());
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		switch (item.getItemId()) {
		case android.R.id.home:
			SlidingLayer slidingLayer = (SlidingLayer) this.findViewById(R.id.left_panel);
			if (slidingLayer.isOpened()) {
				slidingLayer.closeLayer(true);
			} else {
				slidingLayer.openLayer(true);
			}
			break;
		}
		return super.onOptionsItemSelected(item);
	}

	public void changeHomeContent(Fragment content) {
		FragmentManager manager = this.getSupportFragmentManager();
		manager.popBackStack();
		FragmentTransaction transaction = manager.beginTransaction();
		transaction.replace(R.id.current_fragment_container, content);
		transaction.commit();
	}

	@Override
	public void onHomeSectionSelected(HomeSection section) {
		((SlidingLayer) this.findViewById(R.id.left_panel)).closeLayer(true);
		Intent intent = new Intent(this, SectionActivity.class);
		intent.putExtra(SectionActivity.SECTION_INDEX, section.ordinal());
		this.startActivity(intent);
	}
	
	@Override
	public void onBackPressed() {
		if(((SlidingLayer) this.findViewById(R.id.left_panel)).isOpened()){
			((SlidingLayer) this.findViewById(R.id.left_panel)).closeLayer(true);
		} else {
			super.onBackPressed();
		}
		super.onBackPressed();
	}

}
